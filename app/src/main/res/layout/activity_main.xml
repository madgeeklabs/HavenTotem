<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@color/background"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/welcome_back" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70sp"
        android:id="@+id/user_name_title" />

    <TextView android:text="@string/you_got_money" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:id="@+id/user_money_collect" />

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView android:text="1st" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:textStyle="bold"
                android:id="@+id/asdf" />

            <TextView android:text="@string/tell_us_about" android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:id="@+id/tell_us" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="250dp">
            <ImageView
                android:layout_margin="10dp"
                android:src="@drawable/record"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:id="@+id/recordVideo" />
            <VideoView
                android:visibility="invisible"
                android:layout_width="250dp"
                android:layout_height="250dp" />
        </RelativeLayout>


        <TextView
            android:layout_marginTop="220dp"
            android:text="@string/printed" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:id="@+id/printed" />

        <ImageView
            android:src="@drawable/printed"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/printedImage" />
    </LinearLayout>

</LinearLayout>
